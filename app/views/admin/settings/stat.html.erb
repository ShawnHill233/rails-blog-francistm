<% content_for :page_title do %>统计代码设置<% end %>

<%= form_for @stat, url: admin_settings_stat_path, method: :put, html: { role: "form", class: "center-block" } do |f| %>

  <% unless flash.empty? %>
    <%= render_flash flash %>
  <% end %>

  <div class="form-group">
    <%= f.label "访问统计代码" %>
    <%= f.text_area :code, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.submit "保存", class: "btn btn-primary col-xs-2 pull-right" %>
  </div>

<% end %>
